<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="16dp"
>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date of Entry"
              android:id="@+id/exDateOfEntryTV"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exDateOfEntryET"
            android:layout_below="@+id/exDateOfEntryTV"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Expense Label"
              android:id="@+id/expenseLabelTV"
              android:layout_below="@+id/exDateOfEntryET"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expenseLabelET"
            android:inputType="textAutoComplete"
            android:layout_below="@+id/expenseLabelTV"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Amount"
              android:id="@+id/expenseAmtTV"
              android:layout_below="@id/expenseLabelET"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expenseAmtET"
            android:inputType="number"
            android:layout_below="@+id/expenseAmtTV"
    />
    <!--  <Button android:layout_width="wrap_content"
              android:layoaut_height="wrap_content"
              android:text="Update"
              android:id="@+id/updateEntryBtn"
              android:layout_below="@id/noOfEmptyET"
              android:layout_centerHorizontal="true"
      />-->



</RelativeLayout>