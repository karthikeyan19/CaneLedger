<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date of Entry"
              android:id="@+id/dateOfEntryTV"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateOfEntryET"
        android:layout_below="@+id/dateOfEntryTV"
         />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Number of Load"
              android:id="@+id/noOfLoadTV"
              android:layout_below="@+id/dateOfEntryET"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noOfLoadET"
            android:inputType="number"
            android:layout_below="@+id/noOfLoadTV"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Number of Empty Picked"
              android:id="@+id/noOfEmptyTV"
              android:layout_below="@id/noOfLoadET"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noOfEmptyET"
            android:inputType="number"
            android:layout_below="@+id/noOfEmptyTV"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Collected Amount"
              android:id="@+id/collectedAmtTV"
              android:layout_below="@id/noOfEmptyET"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CollectedAmtET"
            android:inputType="number"
            android:layout_below="@+id/collectedAmtTV"
    />
  <!--  <Button android:layout_width="wrap_content"
            android:layoaut_height="wrap_content"
            android:text="Update"
            android:id="@+id/updateEntryBtn"
            android:layout_below="@id/noOfEmptyET"
            android:layout_centerHorizontal="true"
    />-->



</RelativeLayout>